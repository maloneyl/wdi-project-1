%hr/
/ * BASIC PROFILE STUFF

%h2{ style: "font-family: #{@user.profile.font_face_primary}; color: ##{@user.profile.font_color_primary}" }
  = "#{@user.name} (#{@user.handle})"
= image_tag @user.profile.avatar_url(:thumb) if @user.profile.avatar?
%h5{ style: "font-family: #{@user.profile.font_face_primary}; color: ##{@user.profile.font_color_primary}" }
  Location
%p{ style: "font-family: #{@user.profile.font_face_secondary}; color: ##{@user.profile.font_color_secondary}" }
  = @user.profile.location

%h5{ style: "font-family: #{@user.profile.font_face_primary}; color: ##{@user.profile.font_color_primary}" }
  Blurb
%p{ style: "font-family: #{@user.profile.font_face_secondary}; color: ##{@user.profile.font_color_secondary}" }
  = @user.profile.bio

%h5{ style: "font-family: #{@user.profile.font_face_primary}; color: ##{@user.profile.font_color_primary}" }
  Links
%p{ style: "font-family: #{@user.profile.font_face_secondary}; color: ##{@user.profile.font_color_secondary}" }
  = link_to 'Twitter', "http://wwww.twitter.com/#{@user.profile.twitter}"
  = link_to 'Facebook', "http://wwww.facebook.com/#{@user.profile.facebook}"
  = link_to 'Website', @user.profile.website

%hr/

/ * MUSIC STUFF

%h3{ style: "font-family: #{@user.profile.font_face_primary}; color: ##{@user.profile.font_color_primary}" }
  Music
%p{ style: "font-family: #{@user.profile.font_face_secondary}; color: ##{@user.profile.font_color_secondary}" }
  - @user.music.each do |song|
    = link_to song.title, music_path(song)
    %br/
    = "Genre: #{song.genre}"
    %br/
    = image_tag song.art, width: 150
    %br/
    %audio{controls: ""}
      %source{src: "#{song.track}", type: "audio/mpeg"}
      %embed{height: "50", src: "#{song.track}", width: "100"}
    %br/
    = link_to pluralize(song.comments.count, 'Comment'), music_path(song) # need to add anchor
    |
    = link_to 'Add Comment', music_path(song) # need to add anchor
    |
    = link_to 'Delete Track', song, method: :delete, confirm: "Are you sure you'd like to remove #{song.title}?" # only admin and owner-user can do this
    %br/
    %br

%hr/


